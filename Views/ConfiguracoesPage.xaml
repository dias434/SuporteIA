<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="SuporteIA.Views.ConfiguracoesPage"
             Title="Configurações"
             BackgroundColor="{StaticResource BackgroundColor}">
    
    <ScrollView>
        <VerticalStackLayout Padding="20" Spacing="25">
            
            <!-- Cabeçalho -->
            <VerticalStackLayout Spacing="8">
                <Label Text="Configurações" 
                       FontSize="24" 
                       FontAttributes="Bold" 
                       TextColor="{StaticResource DarkColor}"/>
                <Label Text="Gerencie suas preferências e conta" 
                       FontSize="16" 
                       TextColor="{StaticResource SecondaryColor}"/>
            </VerticalStackLayout>
            
            <!-- Perfil -->
            <Border BackgroundColor="White" 
                   Stroke="{StaticResource LightColor}"
                   StrokeThickness="0"
                   StrokeShape="RoundRectangle 12"
                   Padding="20">
                <VerticalStackLayout Spacing="15">
                    <Label Text="Perfil" 
                           FontSize="18" 
                           FontAttributes="Bold" 
                           TextColor="{StaticResource DarkColor}"/>
                    
                    <VerticalStackLayout Spacing="12">
                        <HorizontalStackLayout Spacing="15">
                            <Border BackgroundColor="{StaticResource PrimaryColor}" 
                                   StrokeShape="RoundRectangle 100"
                                   WidthRequest="60" 
                                   HeightRequest="60"
                                   Padding="0">
                                <Label Text="DS" 
                                       FontSize="18" 
                                       FontAttributes="Bold"
                                       TextColor="White"
                                       HorizontalOptions="Center" 
                                       VerticalOptions="Center"/>
                            </Border>
                            
                            <VerticalStackLayout Spacing="2" VerticalOptions="Center">
                                <Label Text="Dias Silva" 
                                       FontSize="16" 
                                       FontAttributes="Bold"
                                       TextColor="{StaticResource DarkColor}"/>
                                <Label Text="dias@gmail.com" 
                                       FontSize="14" 
                                       TextColor="{StaticResource SecondaryColor}"/>
                                <Label Text="Cliente" 
                                       FontSize="12" 
                                       TextColor="{StaticResource PrimaryColor}"/>
                            </VerticalStackLayout>
                        </HorizontalStackLayout>
                        
                        <Button Text="Editar Perfil" 
                               BackgroundColor="Transparent"
                               TextColor="{StaticResource PrimaryColor}"
                               BorderColor="{StaticResource PrimaryColor}"
                               BorderWidth="1"
                               HeightRequest="40"/>
                    </VerticalStackLayout>
                </VerticalStackLayout>
            </Border>
            
            <!-- Notificações -->
            <Border BackgroundColor="White" 
                   Stroke="{StaticResource LightColor}"
                   StrokeThickness="0"
                   StrokeShape="RoundRectangle 12"
                   Padding="20">
                <VerticalStackLayout Spacing="15">
                    <Label Text="Notificações" 
                           FontSize="18" 
                           FontAttributes="Bold" 
                           TextColor="{StaticResource DarkColor}"/>
                    
                    <VerticalStackLayout Spacing="10">
                        <HorizontalStackLayout Spacing="10">
                            <Switch IsToggled="True" 
                                   HorizontalOptions="Start"
                                   VerticalOptions="Center"/>
                            <Label Text="Receber notificações" 
                                   FontSize="14" 
                                   VerticalOptions="Center"
                                   TextColor="{StaticResource DarkColor}"/>
                        </HorizontalStackLayout>
                        
                        <HorizontalStackLayout Spacing="10">
                            <Switch IsToggled="True" 
                                   HorizontalOptions="Start"
                                   VerticalOptions="Center"/>
                            <Label Text="Notificações por email" 
                                   FontSize="14" 
                                   VerticalOptions="Center"
                                   TextColor="{StaticResource DarkColor}"/>
                        </HorizontalStackLayout>
                    </VerticalStackLayout>
                </VerticalStackLayout>
            </Border>
            
            <!-- Ações -->
            <Border BackgroundColor="White" 
                   Stroke="{StaticResource LightColor}"
                   StrokeThickness="0"
                   StrokeShape="RoundRectangle 12"
                   Padding="20">
                <VerticalStackLayout Spacing="12">
                    <Label Text="Ações" 
                           FontSize="18" 
                           FontAttributes="Bold" 
                           TextColor="{StaticResource DarkColor}"/>
                    
                    <VerticalStackLayout Spacing="8">
                        <Button Text="Alterar Senha" 
                               BackgroundColor="Transparent"
                               TextColor="{StaticResource PrimaryColor}"
                               BorderColor="{StaticResource PrimaryColor}"
                               BorderWidth="1"
                               HeightRequest="40"/>
                        
                        <Button Text="Sair da Conta" 
                               BackgroundColor="Transparent"
                               TextColor="{StaticResource DangerColor}"
                               BorderColor="{StaticResource DangerColor}"
                               BorderWidth="1"
                               HeightRequest="40"
                               Clicked="OnSairClicked"/>
                    </VerticalStackLayout>
                </VerticalStackLayout>
            </Border>
            
        </VerticalStackLayout>
    </ScrollView>
</ContentPage>